<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nutricare.model.dao.BoardDao">

    <!-- 게시글 공통 컬럼 -->
    <sql id="boardColumns">
        b.board_id,
        b.user_id,
        b.title,
        b.content,
        b.category,
        b.view_count,
        b.created_at,
        b.updated_at,
        b.is_deleted,
        u.name AS author_name
    </sql>

    <!-- 게시글 결과 매핑 -->
    <resultMap id="boardResultMap" type="Board">
        <id property="boardId" column="board_id"/>
        <result property="userId" column="user_id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="category" column="category"/>
        <result property="viewCount" column="view_count"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="deleted" column="is_deleted"/>
        <result property="authorName" column="author_name"/>
        <collection property="images" column="board_id" select="selectImagesByBoardId" />
    </resultMap>

    <!-- 게시글 이미지 결과 매핑 -->
    <resultMap id="boardImageResultMap" type="BoardImage">
        <id property="imageId" column="image_id"/>
        <result property="boardId" column="board_id"/>
        <result property="imageUrl" column="image_url"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <!-- 게시글 전체 조회 -->
    <select id="selectAll" resultMap="boardResultMap">
        SELECT
        <include refid="boardColumns"/>
        FROM board b
        JOIN user u ON b.user_id = u.user_id
        WHERE b.is_deleted = FALSE
        ORDER BY b.created_at DESC
    </select>

    <!-- 게시글 상세 조회 -->
    <select id="selectById" parameterType="long" resultMap="boardResultMap">
        SELECT
        <include refid="boardColumns"/>
        FROM board b
        JOIN user u ON b.user_id = u.user_id
        WHERE b.board_id = #{boardId}
          AND b.is_deleted = FALSE
    </select>

    <!-- 게시글 등록 -->
    <insert id="insert" parameterType="Board"
        useGeneratedKeys="true" keyProperty="boardId">
        INSERT INTO board (title, content, category, user_id)
        VALUES (#{title}, #{content}, #{category}, #{userId})
    </insert>

    <!-- 게시글 이미지 등록 -->
    <insert id="insertBoardImages" parameterType="Board">
        INSERT INTO board_image (board_id, image_url)
        VALUES
        <foreach collection="images" item="image" separator=",">
            (#{boardId}, #{image.imageUrl})
        </foreach>
    </insert>

    <!-- 게시글 내용 수정 -->
    <update id="update" parameterType="Board">
        UPDATE board
        SET title = #{title},
            content = #{content},
            category = #{category},
            updated_at = NOW()
        WHERE board_id = #{boardId}
          AND is_deleted = FALSE
    </update>

    <!-- 게시글 조회수 증가 -->
    <update id="updateViewCnt" parameterType="long">
        UPDATE board
        SET view_count = view_count + 1
        WHERE board_id = #{boardId}
          AND is_deleted = FALSE
    </update>
    
    <!-- 게시글 소프트 삭제 -->
    <update id="delete" parameterType="long">
        UPDATE board
        SET is_deleted = TRUE,
            updated_at = NOW()
        WHERE board_id = #{boardId}
    </update>

    <!-- 특정 게시글 이미지 조회 -->
    <select id="selectImagesByBoardId" parameterType="long" resultMap="boardImageResultMap">
        SELECT image_id, board_id, image_url, created_at
        FROM board_image
        WHERE board_id = #{boardId}
    </select>

</mapper>
