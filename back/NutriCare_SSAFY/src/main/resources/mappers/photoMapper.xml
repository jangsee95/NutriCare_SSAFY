<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nutricare.model.dao.PhotoDao">

    <!-- Photo 공통 컬럼 -->
    <sql id="photoColumns">
		p.photo_id,
		p.user_id,
		p.photo_url,
		p.created_at
    </sql>

    <!-- 결과 매핑 -->
    <resultMap id="photoResultMap" type="Photo">
        <id property="photoId" column="photo_id"/>
        <result property="userId" column="user_id"/>
        <result property="photoUrl" column="photo_url"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

	<!-- Photo 추가 -->
	<insert id="insert" parameterType="Photo" useGeneratedKeys="true" keyProperty="photoId">
		INSERT INTO photo (user_id, photo_url)
		VALUES (#{userId}, #{photoUrl})
	</insert>
	
	<!--Photo 유저별 리스트 가져오기 -->
	<select id="selectListByUserId" parameterType="long" resultMap="photoResultMap">
		SELECT <include refid="photoColumns"/> 
		FROM photo
		WHERE user_id = #{userId}
	</select>
	
	<!-- Photo Id로 가져오기  -->
	<select id="selectOne" parameterType="long" resultMap="photoResultMap">
		SELECT <include refid="photoColumns"/>
		FROM photo
		WHERE photo_id = #{photoId}
	</select>
	
	<!-- Photo 삭제  -->
	<delete id="delete" parameterType="long">
		DELETE FROM photo
		WHERE photo_id = #{photoId}
	</delete>
</mapper>
